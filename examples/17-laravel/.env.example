# Laravel Application - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# SERVER CONFIGURATION (Required)
# ============================================================================
SERVER_HOST=YOUR_SERVER_IP  # Your VPS IP address

# ============================================================================
# SSL CERTIFICATE (Required for HTTPS)
# ============================================================================
LETSENCRYPT_EMAIL=admin@example.com  # Email for Let's Encrypt

# ============================================================================
# LARAVEL APP KEY (Required)
# ============================================================================
# Generate with: php artisan key:generate --show
# Or: base64:$(openssl rand -base64 32)
APP_KEY=base64:your-app-key-here-generate-with-php-artisan-key-generate

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Laravel
APP_ENV=production
APP_DEBUG=false

# ============================================================================
# DATABASE (SQLite by default)
# ============================================================================
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/storage/database.sqlite

# ============================================================================
# QUICK START:
# ============================================================================
# 1. cp .env.example .env
# 2. Generate key: php artisan key:generate --show
# 3. Edit .env with your values
# 4. tako deploy --env production
# 5. Access: https://laravel.YOUR_SERVER_IP.sslip.io
# ============================================================================
